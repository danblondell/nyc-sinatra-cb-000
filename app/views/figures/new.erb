<form action="/figures" method="post">
  <p>Figure Name: <input type="text" name="figure[name]" id="figure_name"></p>

  <p>Figure Title:</p>
  <% @titles.each do |title| %>
    <input type="checkbox" name=<%= "figure[title_ids][]" %> value=<%= "#{title.id}" %> id=<%= "title_#{title.id}" %>> <%= title.name %><br><br>
  <% end %>


  <p>Figure Landmark:</p>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name=<%= "figure[landmark_ids][]" %> value=<%= "#{landmark.id}" %> id=<%= "landmark_#{landmark.id}"%>> <%= landmark.name %><br><br>
  <% end %>


  <p>Landmark Name: <input type="text" name="landmark[name]" id="new_landmark"></p>

  <p>Title Name: <input type="text" name="title[name]" id="new_title"></p>

  <input type="submit" name="Create New Figure" id="Create New Figure">
</form>
